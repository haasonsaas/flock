{
  "manifest_version": 3,
  "name": "Flock - Social CRM",
  "version": "1.1.0",
  "description": "Your personal CRM for Twitter/X and Bluesky. Save profiles, track interactions, manage your pipeline.",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://bsky.app/*",
    "https://api.anthropic.com/*",
    "https://public.api.bsky.app/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "css": ["content/content.css"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://bsky.app/*"],
      "css": ["content/content.css"],
      "js": ["content/bluesky.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar/*", "assets/*"],
      "matches": ["https://twitter.com/*", "https://x.com/*", "https://bsky.app/*"]
    }
  ]
}
